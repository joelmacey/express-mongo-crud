<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addModal">Add New Item</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/books" method="POST">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Title:</label>
            <input type="text" class="form-control" id="title-text" placeholder="My Latest Novel" name="title">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">image URL:</label>
            <input class="form-control" id="image-url-text" placeholder="https://myimageurl.com/" name="image"></input>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">author:</label>
            <input class="form-control" id="author-text" placeholder="John Smith" name="author"></input>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">description:</label>
            <textarea class="form-control" id="description-text" placeholder="A story about a young boy who..." name="description"></textarea>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">website URL:</label>
            <input class="form-control" id="website-url-text" placeholder="https://buymybookhere.com" name="website"></input>
          </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
    </div>
  </div>
</div>
